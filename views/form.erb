<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>HTML forms for testing HTTP</title>
  </head>
  <body>
    <p>
      <form action="<%= @action_target %>" method=post>
        POST
        <input type=text name="math" value="2 * 2 = 4" />
        <input type=text name="foo " value="bar" />
        <input type=submit value="submit" />
      </form>
    </p>
    <p>
      <form action="<%= @action_target %>" method=get>
        GET
        <input type=text name="math" value="2 * 2 = 4" />
        <input type=text name="foo " value="bar" />
        <input type=submit value="submit" />
      </form>
    </p>
    <p>
      <form action="<%= @action_target %>" method=post enctype="multipart/form-data">
        multipart
        <input type=text name="math" value="2 * 2 = 4" />
        <input type=text name="foo " value="bar" />
        <input type=file name=myfile />
        <input type=submit value="submit" />
      </form>
    </p>
  </body>
</html>
